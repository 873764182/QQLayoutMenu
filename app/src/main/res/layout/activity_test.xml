<?xml version="1.0" encoding="utf-8"?>
<com.panxiong.qqlayoumenu.widget.LeftMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.panxiong.qqlayoumenu.widget.TestActivity">

    <!--菜单布局-->
    <LinearLayout
        android:id="@+id/layout_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical">
        <!--在这里添加你的菜单-->
    </LinearLayout>

    <!--内容布局-->
    <LinearLayout
        android:id="@+id/layout_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:gravity="center"
        android:orientation="vertical">
        <!--在这里显示你的主页内容-->
    </LinearLayout>
</com.panxiong.qqlayoumenu.widget.LeftMenuLayout>